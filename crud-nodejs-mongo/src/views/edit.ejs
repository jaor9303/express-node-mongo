<%- include ('partials/_header.ejs') %>

<div class="container">
    <div class="row">
        <!-- FORM -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<% task._id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="title" value="<%= task.title%>" placeholder="Insert title" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" placeholder="Insert description" class="form-control"><%= task.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">
                            Update
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer.ejs') %>